@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body mb-4 shadow-sm">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Create, update, or delete products.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body mb-4 shadow-sm">
                    <h5 class="card-title">Manage Sales</h5>
                    <p class="card-text">Track and manage product sales.</p>
                    <a href="@Url.Action("Index", "Sale")" class="btn btn-primary">Go to Sales</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body mb-4 shadow-sm">
                    <h5 class="card-title">Sales Report</h5>
                    <p class="card-text">Generate and view sales reports.</p>
                    <a href="@Url.Action("Report", "Sale")" class="btn btn-primary">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>
