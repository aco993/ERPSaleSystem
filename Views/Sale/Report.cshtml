@model IEnumerable<ERPSalesSystem.Models.Sale>

@{
    ViewData["Title"] = "Sales Report";
}

<h1>Sales Report</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Product.Name</td>
                <td>@sale.Quantity</td>
                <td>@sale.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
